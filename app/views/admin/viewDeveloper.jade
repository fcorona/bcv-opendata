extends layoutAdmin

block adminContent
  div.page-header
    h2= dev.name
      small.pull-right
        a(href='/admin/devs/') volver

  dl.dl-horizontal
    dt Nombre:
    dd= dev.name

    dt Correo:
    dd= dev.email
  
    dt Validado:
    dd= dev.verified

    dt Tipo de Usuario:
    dd= dev.role

    dt Aplicaciones:
    dd
      ul.list-unstyled
        for app in dev.apps
          li
            a(href='/apps/#{app.id}')= app.name

  hr
  form.pull-right(method='POST' action='/admin/devs/#{dev.id}/toggleVerify')
    button.btn.btn-primary.format(type='submit')= dev.verified?'Quitar verificaci√≥n':'Verificar'